# 运行所有测试
pytest

# 运行特定的测试文件
pytest test_file.py

# 运行特定的测试用例
pytest test_file.py::test_case

# 运行测试并显示详细输出
pytest -v

# 运行测试并生成覆盖率报告
pytest --cov=your_module

# 运行测试并生成HTML覆盖率报告
pytest --cov=your_module --cov-report=html

# 运行测试并在第一个失败后停止
pytest -x

# 运行测试并显示最慢的10个测试持续时间
pytest --durations=10

# 运行带有特定标记的测试
pytest -m marker_name

# 运行测试并捕获日志输出
pytest --log-cli-level=INFO

# 并行运行测试
pytest -n auto

